<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="<%=projects_path%>">Projects</a></li>
    <li class="breadcrumb-item"><a href="<%=project_path(@project)%>"><%=@project.name%></a></li>   
    <li class="breadcrumb-item"><a href="<%=project_tasks_path(@project)%>">Tasks</a></li>
    <li class="breadcrumb-item active" aria-current="page"><%=@task.name%></li>
  </ol>
</nav>
<h1><%= @task.name %></h1>

<p><strong>Description:</strong> <%= @task.description %></p>
<p><strong>Due Date:</strong> <%= @task.due_date %></p>
<p><strong>Completion:</strong> <%= @task.completion ? 'Completed' : 'Pending' %></p>

<%= link_to 'Edit', edit_project_task_path(@project, @task), class: 'btn btn-secondary' %>
<%= link_to 'Back', project_tasks_path(@project), class: 'btn btn-primary' %>

